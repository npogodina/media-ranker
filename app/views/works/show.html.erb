<section>
  <h2> <%= @work.title %> </h2>
  <p>Created by: <%= @work.creator %> </p>
  <p>Published: <%= @work.publication_year%> </p>
  <p> <%= @work.description %> </p>
  <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>    
  <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>    
  <%= link_to "Upvote", upvote_path(@work.id), method: :create, class: "btn btn-primary" %>    
  <%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Delete #{@work.title}?"}, class: "btn btn-danger" %>
</section>

<section class="mt-5">
  <h3><%= @work.votes.count %> Votes for this <%= @work.category.capitalize %></h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">User</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      
    </tbody>
  </table>
</section>