<div class="container">
  <section>
    <h1> <%= @work.title %> </h1>
    <p>Created by: <%= @work.creator %> </p>
    <p>Published: <%= @work.publication_year%> </p>
    <p> <%= @work.description %> </p>
    <%= link_to "Back to media ranks", works_path, class: "btn btn-primary" %>    
    <%= link_to "Edit", works_path, class: "btn btn-primary" %>    
    <%= link_to "Upvote", works_path, class: "btn btn-primary" %>    
    <%= link_to "Delete", works_path, class: "btn btn-danger" %>    
  </section>

  <section>
    <h2>999 Votes for this <%= @work.category.capitalize %></h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">User</th>
          <th scope="col">Date</th>
        </tr>
      </thead>
      <tbody>
        
      </tbody>
    </table>
  </section>
</div>