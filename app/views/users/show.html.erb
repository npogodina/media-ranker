<h2>User Summary: <%= @user.name %> </h2>
<p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>

<section class="mt-5">
  <h3>Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Media Title</th>
        <th scope="col">Created By</th>
        <th scope="col">Published</th>
        <th scope="col">Category</th>
        <th scope="col">Voted On</th>
      </tr>
    </thead>
    <tbody>
      
      <% @user.votes.each do |vote| %>
        <tr>
          <th scope="col"> <%= vote.work.title %> </th>
          <td> <%= vote.work.creator %> </td>
          <td> <%= vote.work.publication_year %> </td>
          <td> <%= vote.work.category %> </td>
          <td> <%= vote.created_at.strftime("%b %d, %Y") %> </td>
        </tr>
      <% end %>
      
    </tbody>
  </table>
</section>

<div class="mt-5">
  <%= link_to "See all Users", users_path, class: "btn btn-primary" %>   
  <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>    
</div>
